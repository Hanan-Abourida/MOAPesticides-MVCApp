@model IEnumerable<Pesticides.Models.ActiveIngredient>

@{
    ViewBag.Title = "المواد الفعّالة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h3>المواد الفعّالة</h3>
<br />
<p style="float:left;">
    @Html.ActionLink("جديد", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" id="ingredientsTableId">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IngredientAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientEn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientEn)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.ActiveIngredientPk }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.ActiveIngredientPk })
                </td>
            </tr>
        }
    </tbody>

</table>

<script>

    $(document).ready(function () {
        $('#ingredientsTableId').DataTable(
            {
                searching: false,
                language: {
                    "lengthMenu": "عرض _MENU_"
                }
            }
        );
    });
</script>
