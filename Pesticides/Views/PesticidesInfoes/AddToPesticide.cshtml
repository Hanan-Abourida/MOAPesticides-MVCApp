                @*@Html.EditorFor(model => model.ModeOfUse, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextAreaFor(model => model.ModeOfUse, 10, 100, new { @class = "form-control", @style = "max-width:500px !important" })
                @Html.ValidationMessageFor(model => model.ModeOfUse, "", new { @class = "text-danger" })
            </div>
        </div>

