            <div class="col-md-10">
                @Html.EditorFor(model => model.RatePerLiters, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RatePerLiters, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RatePerHectar, "نسبة الإستعمال غ أو ملل / هكتار", htmlAttributes: new { @class = "control-label col-md-2" })
