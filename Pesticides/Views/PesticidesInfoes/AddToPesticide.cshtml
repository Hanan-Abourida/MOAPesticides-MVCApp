@model Pesticides.Models.PesticidesInfo
@{
                ViewBag.Title = "AddToPesticide";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>إضافة</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PesticidesInfoPk)

        <div class="form-group">
            @Html.LabelFor(model => model.fkPesticideType, "نوع المبيد", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fkPesticideType", null, htmlAttributes: new { @class = "form-control disabledInput"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fkActiveIngredient, "المادة الفعّالة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fkActiveIngredient", null, htmlAttributes: new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fkFormulation, "التركيبة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fkFormulation", null, htmlAttributes: new { @class = "form-control"})
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ModeOfAction, "طريقة عمل المبيد", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ModeOfAction, 10, 100, new { @class = "form-control", @style = "max-width:500px !important" })
                @Html.ValidationMessageFor(model => model.ModeOfAction, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fkCrop, "المحصول", htmlAttributes: new { @class = "control-label col-md-2" })
