                @Html.ValidationMessageFor(model => model.fkToxicityBees, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fkToxicityBirds, "درجة السّميّة على الطيور", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
