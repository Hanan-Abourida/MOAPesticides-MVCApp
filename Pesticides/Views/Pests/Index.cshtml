@model IEnumerable<Pesticides.Models.Pest>

@{
    ViewBag.Title = "الآفات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h3>الآفات</h3>
<br />
<p style="float:left;">
    @Html.ActionLink("إضافة آفة", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" id="pestsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PestNameAr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PestNameAr)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.PestPk }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.PestPk })
                </td>
            </tr>
        }
    </tbody>

</table>
<script>

    $(document).ready(function () {
        $('#pestsTable').DataTable(
            {
                searching: false,
                language: {
                    "lengthMenu": "عرض _MENU_"
                }
            }
        );
    });
</script>
