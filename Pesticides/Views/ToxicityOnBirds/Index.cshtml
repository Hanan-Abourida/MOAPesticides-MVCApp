@model IEnumerable<Pesticides.Models.ToxicityOnBird>

@{
    ViewBag.Title = "التأثير على الطيور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h3>التأثير على الطيور</h3>
<br />
<p style="float:left;">
    @Html.ActionLink("إضافة", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" id="birdsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToxicityAr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ToxicityAr)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.ToxicityBirdPk }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.ToxicityBirdPk })
                </td>
            </tr>
        }

</table>
<script>

    $(document).ready(function () {
        $('#birdsTable').DataTable(
            {
                searching: false,
                language: {
                    "lengthMenu": "عرض _MENU_"
                }
            }
        );
    });
</script>