@model IEnumerable<Pesticides.Models.Formulation>

@{
    ViewBag.Title = "التركيبات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h3>لائحة التركيبات</h3>
<br />
<p style="float:left;">
    @Html.ActionLink("إضافة تركيبة", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" id="formulationTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FormulationDescAr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FormulationDescAr)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.FormulationPk }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.FormulationPk })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>

    $(document).ready(function () {
        $('#formulationTable').DataTable(
            {
                searching: false,
                language: {
                    "lengthMenu": "عرض _MENU_"
                }
            }
        );
    });
</script>
